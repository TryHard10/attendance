<!DOCTYPE html>
<html>
  <head>
    <title>Attendance</title>

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if access_signed_in?%>
      <!--%= render "panel"%-->
      <div id="header-aside-left" class="be-strong-gray">
        <div class="logo-container be-aqua">
          <div>
            <div class="right" id="logo"></div>
          </div>
          <div>
            <h3 class="white">Attendance</h3>
          </div>
        </div>
        <div class="menu">
          <div class="block">
            <p class="strong-gray title-menu">--MAIN MENU--</p>
          </div>
          <div class="block selected-item">
            <div class="icon">
              <div></div>
            </div>
            <div class="text-menu">
              <%= link_to "DASHBOARD", root_path,class: "strong-gray no-list"%>
            </div>
          </div>
          <div class="block">
            <div class="icon"><div></div></div>
            <div class="text-menu">
              <%= link_to "GROUPS" , groups_path, class: "strong-gray no-list"%>
            </div>
          </div>
        </div>
      </div>

      <div id="header-aside-right" class="be-white">
        <div class="header-content">
          <div class="info-user">
            <p class="strong-gray"><%= current_access.email%></p>
          </div>
          <div>
            <a rel="nofollow" data-method="delete" href="/accesses/sign_out"><div class="l_out"></div></a>      
          </div>
        </div>
      </div>
    <%end%>
  	<!--p class="notice"><%= notice%></p>
  	<p class="alert"><%= alert%></p-->
    <%= yield %>
  </body>
</html>
