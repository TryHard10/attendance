<div class="box be-aqua">
  <div class="be-light-gray container-center-form box-radius">
    <div class="form-container">
      <div class="topic-form text-center">
        <h2>Sign in</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <!--%= f.label :email %><br /-->
          <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control box-radius text-center", placeholder: "username"%>
        </div>

        <div class="field">
          <!--%= f.label :password %><br /-->
          <%= f.password_field :password, autocomplete: "off" , class: "form-control box-radius text-center", placeholder: "password"%>
        </div>

        <% if devise_mapping.rememberable? -%>
          <!--div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div-->
        <% end -%>

        <div class="actions field">
          <%= f.submit "login", class: "btn be-aqua white box-radius large-padding" %>
        </div>
        <div class="field no-margin">
          <p class="alert"><%= alert%></p>
        </div>

      <% end %>
      <!---%= render "devise/shared/links" %-->
    </div>  
  </div>
</div>
